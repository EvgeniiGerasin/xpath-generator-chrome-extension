{
    "manifest_version": 3,
    "name": "Xpath generator with AI",
    "version": "0.1",
    "description": "Генерирует xpath для выделенных элементов страницы. Разработал Евгений Герасин",
    "permissions": [
        "activeTab",
        "scripting",
        "notifications",
        "storage"
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "action": {
        "default_title": "Запустить процесс"
    },
    "host_permissions": [
        "*://*.nvidia.com/*"
    ],
    "icons": {
        "16": "dist/icons/icon.png",
        "32": "dist/icons/icon.png",
        "48": "dist/icons/icon.png",
        "128": "dist/icons/icon.png"
    }
}